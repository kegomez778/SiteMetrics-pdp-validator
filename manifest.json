{
  "manifest_version": 3,
  "name": "Samsung PDP Validator",
  "version": "1.0.0",
  "description": "Herramienta profesional de validación para páginas de producto Samsung en AEM Author",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "permissions": [
    "activeTab",
    "storage",
    "scripting"
  ],
  "host_permissions": [
    "https://p6-us-author.samsung.com/*",
    "https://p6-qa.samsung.com/*",
    "https://*.samsung.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://p6-us-author.samsung.com/*",
        "https://p6-qa.samsung.com/*",
        "https://*.samsung.com/*"
      ],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["validator.js"],
      "matches": ["<all_urls>"]
    }
  ]
}